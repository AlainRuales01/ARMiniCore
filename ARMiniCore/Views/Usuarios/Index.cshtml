@model List<ARMiniCore.Data.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}
@Html.ActionLink("Crear Usuario","Create",new{@class="btn-primary"})

@if (ViewBag.Error == "Error")
{
    <div class="container">
        <div class="alert alert-primary">
            Se ha producido un error
        </div>
    </div>
}
<br />
<br />

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Fecha de nacimiento</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td>
                            @item.UsuarioId
                        </td>
                        <td>
                            @item.Nombre
                        </td>
                        <td>
                            @item.Correo
                        </td>
                        <td>
                            @item.FechaNacimiento.ToShortDateString()
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>
        <h2>No existen registros</h2>
    </div>
}

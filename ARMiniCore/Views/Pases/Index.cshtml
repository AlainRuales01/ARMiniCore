@model List<ARMiniCore.Data.Models.Pase>

@{
    ViewData["Title"] = "Pases";
}
<a class="btn btn-primary" href="@Url.Action("Create")">Crear pase</a>

@if (ViewBag.Error != null)
{
    <div class="container">
        <div class="alert alert-primary">
            @ViewBag.Error
        </div>
    </div>
}
<br />
<br />

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Tipo de Pase</th>
                    <th>Costo Pase</th>
                    <th>Pases</th>
                    <th>Costo Pase</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td>
                            @item.TipoPase
                        </td>
                        <td>
                            @item.Costo
                        </td>
                        <td>
                            @item.Pases
                        </td>
                        <td>
                            @item.CostoPase
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>
        <h2>No existen registros</h2>
    </div>
}

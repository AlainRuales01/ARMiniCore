@model ARMiniCore.Data.Models.UsuarioPase
@{
    ViewData["Title"] = "Agregar pase a usuario";
}
<h2>Crear Usuario</h2>
@if (ViewBag.Error != null)
{
    <div class="container">
        <div class="alert alert-primary">
            @ViewBag.Error
        </div>
    </div>
}
<div class="container">
    @using (Html.BeginForm())
    {
        <div>
            <p>Seleccione un usuario</p>
            @Html.DropDownList("UsuarioId", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div>
            <p>Seleccione tipo de pase</p>
            @Html.DropDownList("PaseId", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div>
            <p>Fecha de compra</p>
            @Html.TextBoxFor(model=>model.FechaCompra, new{Type = "date"})
        </div>
        <input values:"Crear" type="submit" />
    }
</div>

@model List<ARMiniCore.Data.Models.UsuarioPase>

@{
    ViewData["Title"] = "Pases comprados";
}
<a class="btn btn-primary" href="@Url.Action("Create")">Crear pase</a>

@if (ViewBag.Error != null)
{
    <div class="container">
        <div class="alert alert-primary">
            ViewBag.Error
        </div>
    </div>
}
<br />
<br />

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Nombre de usuario</th>
                    <th>Tipo de Pase</th>
                    <th>Número de pases</th>
                    <th>Fecha de compra</th>
                    <th>Fecha de expiración</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td>
                            @item.Usuario.Nombre
                        </td>
                        <td>
                            @item.Pase.TipoPase
                        </td>
                        <td>
                            @item.Pase.Pases
                        </td>
                        <td>
                            @item.FechaCompra.ToShortDateString()
                        </td>
                        <td>
                            @item.FechaExpiracion.ToShortDateString()
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>
        <h2>No existen registros</h2>
    </div>
}
